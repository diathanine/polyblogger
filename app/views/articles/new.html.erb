<h2>Make a new article</h2>

<% if @article.errors.any? %>
  <div class="error_explanation">
    <ul>
      <%@article.errors.full_messages.each do |explanation|%>
        <li><%=explanation%></li>
      <%end%>
    </ul>
  </div>
<%end%>

<%=form_with model: @article, local: true do |form|%>
  <p>
    <%=form.label :title%>
    <%=form.text_field :title%>
  </p>
  <p>
    <%=form.label :text%>
    <%=form.text_area :text%>
  </p>
  <p>
    <%=form.submit%>
  </p>
<%end%>
