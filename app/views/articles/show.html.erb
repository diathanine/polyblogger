
<h2><%= @article.title%></h2>
<p>author: <%=link_to @article.profile_id, profile_path(profile_by_id @article.profile_id)%></p>
<p>
  <%=@article.created_at%>
  <%if current_user && current_profile.id==@article.profile_id%>
  <%= link_to 'delete', article_path(@article), method: :delete, data: {confirm: 'do you want to delete this article? This action cannot be undone'}%>
  <%= link_to 'edit', edit_article_path(@article)%>
  <%end%>
</p>
<p><%= @article.text %></p>

<h2>Comments</h2>
<p><%= render 'comments/form'%></p>
<p><%=  render partial:'comments/comment', collection: @comments %></p>
