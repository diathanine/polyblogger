
  <% if @comment && @comment.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<p class="notice"><%= notice %></p>
<%= form_with(model: @comment, url: article_comments_path(@article, @comment), local: true) do |form| %>
  <div class="actions">
    <p>
      <%=form.label :commenter%>
      <%=form.text_field :commenter%>
    </p>

    <p>
      <%=form.label :text%>
      <%=form.text_area :text%>
    </p>
    <p>
      <%= form.submit %>
    </p>
  </div>
<% end %>
